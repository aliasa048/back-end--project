@model ForgetPasswordVM
<main>
    <!-- breadcrumb area start -->
    <div class="breadcrumb-area bg-img" data-bg="assets/img/banner/breadcrumb-banner.jpg">
        <div class="container">
            <div class="row">
                <div class="col-12">
                    <div class="breadcrumb-wrap text-center">
                        <nav aria-label="breadcrumb">
                            <h1 class="breadcrumb-title">Login-Register</h1>
                            <ul class="breadcrumb">
                                <li class="breadcrumb-item"><a href="index.html">Home</a></li>
                                <li class="breadcrumb-item active" aria-current="page">Login-Register</li>
                            </ul>
                        </nav>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="login-register-wrapper section-padding">
        <div class="container">
            <div class="member-area-from-wrap">
                <div class="row">
                    <div class="col-lg-12">
                        <div class="login-reg-form-wrap">
                            <div class="text-danger mb-2" asp-validation-summary="All"></div>
                            <h2></h2>
                            <form asp-controller="Account" asp-action="ForgetPassword" method="post" enctype="multipart/form-data">
                                <div class="single-input-item">
                                    <input asp-for="Email" placeholder="Email" required />
                                    <span class="text-danger" asp-validation-for="Email"></span>
                                </div>
                                <div class="single-input-item" id="yuxumgelir">
                                    <button type="submit" class="btn">Send mail</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script>


        $("#yuxumgelir").click(function () {
            swal({
                position: 'mid',
                type: 'info',
                icon: 'info',
                title: 'Please Check Email',
                showConfirmButton: false,
                timer: 1500
            });
        });

    </script>

</main>



